    <!-- Zona para postear -->
    <script defer src="/scripts/inicio.js"></script>
    <script defer src="/scripts/posteo.js"></script>

    <div class="row">
      
        <div class=" col-md-12 mx-0 pt-4">
          <div class="container  zonaPosteo " >
            <!-- Zona de posteo que permanece activa siempre -->
            <div class="row mt-3 d-flex bg-gris justify-content-center rounded align-items-center mx-auto">
  
              <form id="pokemonPosteado">
                <div class="col-md-10 py-0 px-0 areaPosteo" >
                  <div class="row me-0 barraPosteo" >
                      <div class="col-md-2 d-flex  py-3 align-items-center barraPosteoHijoImg">
                        <img src="/img/logo.png" class="w-100 img-fluid" alt="">
                      </div>
                      <div class="col-lg-7 d-flex align-items-center barraPosteoHijoInput">
                        <input name="pokemon" list="lista-PokemonBuscado" id="input-PokemonBuscado" autocomplete="off" class="form-control" id="nombre" placeholder="Publica un pokémon">
                        <datalist dir="rtl" class="position-absolute" class="bg-dark rounded d-none"  id="lista-PokemonBuscado">
                                      
                        </datalist>
                      </div>
                      <div class="col-lg-2 d-flex align-items-center barraPosteoHijoBoton ">
                        <button class=" btn btn-md btn-primary" id="btn-Continuar" title="Agrega mas detalles" type="button">Continuar</button> 
                        <div class="popup bg-dark" style="display:none" id="mensaje-notFound">
                          Agrega un pokémon existente.
                        </div>
                      </div>

                      
                  </div>
                  
                  <!-- Zona que se activa al presionar Continuar -->
                  <div  id="div-caracteristicas" style="display: none;" >
  
                    <div class="row border-top w-100">
                      <div class="col-md-12 d-flex py-3 align-items-center w-100">
                        <div class="container w-100">
  
                          <h6 class="bg-dark text-white p-2 rounded-top text-center">Movimientos</h6>
  
                          <table class="table rounded w-100 text-center table-bordered  table-rounded" title="Inserta movimientos del pokémon" style="margin-top: -7px; table-layout: fixed; ">
                              <tbody class="rounded-bottom">
                                  <tr>
                                      <td> <input type="text" list="lista-PokemonAtaque" name="movimiento_1" id="input-pokemonAtaque" autocomplete="off" class="form-control border-0 text-center input-pokemonAtaque" placeholder="-"></td>
                                      <td> <input type="text" list="lista-PokemonAtaque" name="movimiento_2" id="input-pokemonAtaque" autocomplete="off" class="form-control border-0 text-center input-pokemonAtaque" placeholder="-"></td>
                                  </tr>
                                  <tr>
                                      <td> <input type="text" list="lista-PokemonAtaque" name="movimiento_3" id="input-pokemonAtaque" autocomplete="off" class="form-control border-0 text-center input-pokemonAtaque" placeholder="-"></td>
                                      <td> <input type="text" list="lista-PokemonAtaque" name="movimiento_4" id="input-pokemonAtaque" autocomplete="off" class="form-control border-0 text-center input-pokemonAtaque" placeholder="-"></td>
                                  </tr>
                              </tbody>
                          </table>
                          <datalist dir="rtl" class="position-absolute" class="bg-dark rounded d-none"  id="lista-PokemonAtaque">
                                      
                          </datalist>
                        </div>
                      </div>
  
                      <div class="row mx-auto mb-3 caracteristicas-selecionables">
                        <div class="col-md-6 d-flex  align-items-center caracteristica-habilidad">
                          <label for="habilidad" class="me-2">Habilidad</label> 
                          <select class="form-control " name="habilidad" id="select-PokemonHabilidad">
                            
                          </select>    
                        </div>
                        <div class="col-lg-3 d-flex align-items-center caracteristica-nivel">
                          <input name="nivel" type="number" class="form-control" id="nivel" placeholder="nivel" min="1" max="100">
                        </div>
                        <div class="col-lg-3 d-flex align-items-center caracteristica-sexo">
                          <label for="sexo">Sexo</label>
                          <select name="sexo" id="sexo" class="form-control ms-2 sexo" type="text">
                            <option value="-">-</option>
                            <option value="M">&#9794;</option>
                            <option value="F">&#9792;</option>
                          </select>  
                        </div>
                      </div>
  
                      <div class="row mx-auto my-3">
                        <div class="col-md-3 mx-auto d-flex  align-items-center"">
                          <label class="form-check-label me-2" for="checkbox1">
                            Shiny
                          </label>
                          <input  name="shiny" class="form-check-input" type="checkbox" value="1" id="checkboxShiny">
                        </div>
                        <div class="col-lg-9 d-flex align-items-center">
                          <select name="juego" title="Juego de procedencia" type="text" class="form-control" id="select-PokemonJuego" placeholder="Juego">
                          </select>
                        </div>
                      </div>
  
                      <div class="row mx-auto my-3">
                        <div class="col-md-5 mx-auto d-flex  align-items-center"">
                          
                        </div>
                        <div class="col-lg-7 d-flex align-items-center justify-content-around">
                          <button class="btn ms-2 btn-primary" type="submit" onclick="darValoresOcultos('solicitado')" id="btnSoli">Solicitar</button> 
                          <button class="btn ms-2 btn-md btn-primary" onclick="darValoresOcultos('ofrecido')" type="submit" id="btnOfre">Ofrecer</button> 
                          <button class="btn ms-2 btn-md btn-primary" type="button" id="btn-Cancelar">Cancelar</button> 
                        </div>
  
                        <input type="hidden" name="img" id="imgPokemon" value="">
                        <input type="hidden" name="estado" id="estadoPokemon" value="">
                        <input type="hidden" name="user" id="userPokemon" value="<%= usuario[0].username %>">
                        <input type="hidden" name="username" id="userActual" value="<%= usuario[0].username %>">

                      </div>
                    </div>  
                  </div>          
                </div>      
              </form>
            </div>
          </div>        
        </div>
      </div>
  