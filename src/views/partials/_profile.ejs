<script defer src="/scripts/perfil.js"></script>

  <!-- Contenido del primer tercio de la pantalla -->  

  <div class="col-md-3 ms-5 perfil-section bg-gris shadow position-fixed h-100 m-nav profile-res" id="zonaPerfil">

    <div class="img_perfil mt-5 m-auto" >
  
      <form enctype="multipart/form-data" id="fromImg" class="d-none">
        <input type="text" hidden name="username" value="<%= usuario[0].username %>">
        <button class="position-absolute rounded-circle border-0 bg-dark px-2 py-2 align-items-center" style="width: 40px; height: 40px; display: flex;" onclick="document.getElementById('fileUserImg').click()" type="button" id="editarImg">
          <input type="file" id="fileUserImg" name="img" hidden>
          <img src="data:image/png;base64,">         
        </button>
      </form>
            
      <% if (usuario[0].img != null && usuario[0].img != "") { %>
        <img src="/img/imgPerfil/<%= usuario[0].img %>" alt="Imagen de <%= usuario[0].username %>" id="imgUser">
      <% } else { %>
        <img class="bg-light" src="/img/perfil.png" alt="Imagen por defecto" id="imgUser">
      <% } %>
            
    </div>

  <div class="d-flex mt-3 justify-content-center nombreUsuario">
    <h3 id="userPerfil" class="mx-auto"><%= usuario[0].username %></h3>
  </div>

  <% if( pag != "Inicio") { %>
  <div class="mt-3  d-flex justify-content-center flex-column div-botones-ofre-y-soli">
    <form id="formOfreYSoli"  class="mt-3 d-flex justify-content-center flex-column form-botones-ofre-y-soli">
      <button class="mt-1 btn btn-primary text-light btn-ancho mx-auto botones-ofre-y-soli" type="submit" id="btnOfrecidos" title="Filtrar">Ofrecidos</button>
      <button class="mt-3 btn btn-primary text-light btn-ancho mx-auto botones-ofre-y-soli" type="submit" id="btnSolicitados" title="Filtrar">Solicitados</button>
    </form>

    
    
  </div>
  <% } %>

  <button class="shadow btn botonMostrarDatos order-last justify-content-center rounded-circle border-0 bg-dark px-2 py-2 align-items-center text-center text-light hover-dark" title="Mostrar información" 
  style="width: 40px; height: 40px; display: none;" type="button" id="mostrarLateral">☰</button>
  
</div>
  